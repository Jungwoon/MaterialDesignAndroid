<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:padding="5dp"
    android:orientation="horizontal"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/news_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fun tropical escapes"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/news_view_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="The night wa comparatively quiet. Some of the sails were again"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/news_view_update_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="1 hr"
            android:textSize="15sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/news_view_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/sample_news"
        android:layout_weight="2" />

</LinearLayout>
